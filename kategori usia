def kategori_usia(usia):
   if usia <= 0 :
     return "usia tidak valid"
   elif usia <= 12 :
     return "Anak-Anak"
   elif usia 12<= usia <= 17 :
     return "Remaja"
   elif usia 18<= usia <= 64 :
     return "Dewasa"
   else :
     return "lansia"

# Input usia pengguna
try :
usia = int(input("Masukkan Usia Anda :"))
  print(kategori_usia(usia))
except ValueError :
  print("masukkan angka yang valid")
